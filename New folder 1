#include <stdio.h>
int isNeonNumber(int num) {
    int square = num * num;
    int sum = 0;
    while (square != 0) {
        sum += square % 10;
        square /= 10;
    }

    if (sum == num) {
        return 1; // Return true if it's a neon number
    } else {
        return 0; // Return false if it's not a neon number
    }
}

int main() {
    int number;

    printf("Enter a number: ");
    scanf("%d", &number);
    if (isNeonNumber(number)) {
        printf("%d is a neon number.\n", number);
    } else {
        printf("%d is not a neon number.\n", number);
    }

    return 0;
}
